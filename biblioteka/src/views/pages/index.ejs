<%- include('partials/header') %>
<main>
<section>
    <h1>Lista książek</h1>

    <form method="get" action="/" class="row" style="margin:12px 0">
        <div>
            <label for="q" class="muted">Szukaj po tytule</label>
            <input id="q" type="text" name="q" value="<%= q || '' %>" placeholder="np. Dune" />
        </div>
        <div>
            <label for="status" class="muted">Status</label>
            <select id="status" name="status">
                <option value="">— dowolny —</option>
                <% (statusOptions || ['available','borrowed']).forEach(s=> { %>
                    <option value="<%= s %>" <%=(status===s?'selected':'') %>><%= s %>
                    </option>
                    <% }) %>
            </select>
        </div>
        <div style="align-self:end">
            <button type="submit">Filtruj</button>
            <a href="/" style="margin-left:8px">Wyczyść</a>
        </div>
    </form>

    <table>
        <thead>
            <tr>
                <th>Tytuł</th>
                <th>Autor</th>
                <th>Rok</th>
                <th>Status</th>
                <th class="muted">Akcje</th>
            </tr>
        </thead>
        <tbody>
            <% if ((books || []).length===0) { %>
                <tr>
                    <td colspan="5" class="muted">Brak książek.</td>
                </tr>
                <% } %>
                    <% (books || []).forEach(b=> { %>
                        <tr>
                            <td><a href="/books/<%= b._id %>">
                                    <%= b.title %>
                                </a></td>
                            <td>
                                <%= b.author %>
                            </td>
                            <td>
                                <%= b.year || '—' %>
                            </td>
                            <td>
                                <%= b.status %>
                            </td>
                            <td class="actions">
                                <a href="/books/<%= b._id %>/edit">Edytuj</a>
                                <form class="inline" method="post" action="/books/<%= b._id %>?_method=DELETE">
                                    <button type="submit" onclick="return confirm('Usunąć tę pozycję?')">Usuń</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
        </tbody>
    </table>
</section>
</main>
<%- include('partials/footer') %>